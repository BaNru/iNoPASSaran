{
	"name": "¡No PASSarán",
	"version": "1.0",
	"description": "Password manager and generator addon for browser",

	"manifest_version": 2,

	"permissions":
	[
		"tabs"
		,"storage"
		//,"<all_urls>"
	],

	"browser_action":
	{
		"default_title": "¡No PASSarán",
		"default_popup": "popup.html", 
		"default_icon": {
			"19": "img/icon/19.png",
			"38": "img/icon/38.png" 
		}
	},
	"icons": {
		"16": "img/icon/16.png",
		"32": "img/icon/32.png",
		"48": "img/icon/48.png",
		"128": "img/icon/128.png"
	},
	"options_page": "setting.html",

	"content_scripts":[
		{
			"matches": ["http://*/*"],
			"js":["js/page.js"]
		}
	]
}